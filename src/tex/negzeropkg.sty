\newcommand{\negzeroinput}[1]{
  \def\@chapterdir{#1}
  \input{\@chapterdir/chapter.tex}
}

\newcommand{\includeraw}[1]{
  \def\@filepath{\@chapterdir/#1}
  \lstinputlisting{\@filepath}
}

\newcommand{\includecpp}[1]{
  \def\@filepath{\@chapterdir/#1}
  \lstinputlisting[language=c++]{\@filepath}
}

\newcommand{\includepy}[1]{
  \def\@filepath{\@chapterdir/#1}
  \lstinputlisting[language=python]{\@filepath}
}

\newcommand{\includejava}[1]{
